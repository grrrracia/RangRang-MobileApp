<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WelcomeAskForNameActivity"
    android:background="@drawable/welcomebg">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:layout_marginBottom="60dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/greenbox"
        android:orientation="vertical"
        android:padding="55dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/glacialindifference_regular"
            android:text="Halo,"
            android:textColor="@color/BabyPowder"
            android:textSize="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/glacialindifference_regular"
            android:text="masukan nama kamu:"
            android:textColor="@color/BabyPowder"
            android:textSize="25dp" />

        <EditText
            android:id="@+id/etNama"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="25dp"
            android:background="@color/white"
            android:padding="3dp"
            android:textColor="@color/black"
            android:textSize="30dp" />

        <ImageView
            android:id="@+id/btnMasuk"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/masukbutton" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>